<!DOCTYPE html>
<html>
<head>
  <title>Geometer</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
  <div class="container">
    <div class="page-header">
      <h1>All Pictures</h1>
    </div>

  <% @list_of_pictures.each do |picture| %>
    <div class="row">
      <div class="col-sm-12">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="col-sm-2">
                <img src="<%= picture.source %>" class="img-responsive">
            </div>
            <div class="col-sm-10">
              <dl>
                <dt>Caption</dt>
                <dd><%= picture.caption %></dd>

                <dt>Bio</dt>
                <dd><%= picture.favorite %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</body>

